{
    "name": "nest-js-ejs-mvc-boilerplate",
    "version": "0.0.1",
    "description": "NestJS MVC boilerplate description using EJS view-engine",
    "author": "Quy Tran (tranphuquy19@gmail.com)",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "generate:vapid": "./node_modules/.bin/web-push generate-vapid-keys",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "postinstall": "husky install",
        "commit": "cz",
        "typeorm:cli": "ts-node --project ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli -d ./src/config/databases/typeorm-datasource.ts",
        "typeorm:migration:create": "npm run typeorm:cli -- migration:create -n",
        "typeorm:migration:generate": "npm run typeorm:cli -- migration:generate -n",
        "typeorm:migration:run": "npm run typeorm:cli migration:run",
        "typeorm:migration:revert": "npm run typeorm:cli migration:revert"
    },
    "dependencies": {
        "@doracoder/fcm-nestjs": "9.0.5",
        "@faker-js/faker": "^7.3.0",
        "@nestjs/bull": "^0.6.0",
        "@nestjs/common": "^9.0.5",
        "@nestjs/core": "^9.0.5",
        "@nestjs/jwt": "^9.0.0",
        "@nestjs/passport": "^9.0.0",
        "@nestjs/platform-express": "^9.0.5",
        "@nestjs/swagger": "^6.0.4",
        "@nestjs/typeorm": "9.0.1",
        "accesscontrol": "^2.2.1",
        "bcrypt": "^5.0.1",
        "bull": "^3.29.2",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "connect-flash": "^0.1.1",
        "connect-redis": "^6.0.0",
        "cookie-parser": "^1.4.5",
        "csurf": "^1.11.0",
        "dotenv": "^10.0.0",
        "ejs": "^3.1.10",
        "express-session": "^1.17.2",
        "file-type": "^16.5.4",
        "flat": "^5.0.2",
        "helmet": "^4.6.0",
        "i18n": "^0.13.3",
        "jsonwebtoken": "^9.0.0",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "nest-access-control": "^2.0.2",
        "parse-duration": "^1.0.0",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.7.1",
        "random-avatar-generator": "^2.0.0",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.0",
        "sanitize-filename": "^1.6.3",
        "sharp": "^0.32.6",
        "sitemap": "^7.0.0",
        "swagger-ui-express": "^4.6.1",
        "typeorm": "0.3.7",
        "url": "^0.11.0",
        "uuid": "^8.3.2",
        "validator": "^13.7.0",
        "web-push": "^3.4.5",
        "xbytes": "^1.7.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.1",
        "@nestjs/testing": "^9.0.5",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/bull": "^3.15.4",
        "@types/compression": "^1.7.2",
        "@types/connect-flash": "^0.0.37",
        "@types/connect-redis": "^0.0.17",
        "@types/cookie-parser": "^1.4.2",
        "@types/csurf": "^1.11.2",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/flat": "^5.0.2",
        "@types/i18n": "^0.13.1",
        "@types/jest": "^27.0.2",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/lodash": "^4.14.173",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.9.4",
        "@types/passport": "^1.0.7",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/redis": "^2.8.32",
        "@types/sharp": "^0.29.2",
        "@types/supertest": "^2.0.10",
        "@types/uuid": "^8.3.1",
        "@types/web-push": "^3.3.2",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "jest": "^27.2.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.4.1",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
        }
    }
}
